all_greet_prog 100
mploadvar $n qpprice
mploadvar $n expprice
mploadvar $n hpprice
mploadvar $n mpprice
mploadvar $n hvprice
if var($n qpprice == '')
mpsetvar $n qpprice 3000
endif
if var($n expprice == '')
mpsetvar $n expprice 1000
endif
if var($n hpprice == '')
mpsetvar $n hpprice 500
endif
if var($n mpprice == '')
mpsetvar $n mpprice 250
endif
if var($n mvprice == '')
mpsetvar $n mvprice 250
endif
mpsavevar $n qpprice
mpsavevar $n expprice
mpsavevar $n hpprice
mpsavevar $n mpprice
mpsavevar $n hvprice
~

